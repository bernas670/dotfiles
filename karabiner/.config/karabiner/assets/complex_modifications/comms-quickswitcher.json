{
  "title": "ctrl+k quick switcher title",
  "rules": [
    {
      "description": "Discord & Slack Quick Switcher (ctrl+k)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.hnc\\.Discord$",
                "^com\\.tinyspeck\\.slackmacgap$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "k",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
